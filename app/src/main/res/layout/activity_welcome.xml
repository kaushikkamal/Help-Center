<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6"
    tools:context=".Welcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="289dp"
                    android:layout_height="129dp"
                    android:src="@mipmap/help_you" />

                <ImageView
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="50dp"
                    android:layout_height="35dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:src="@drawable/explore"/>

                <ImageView
                    android:id="@+id/createAppointment"
                    android:layout_marginEnd="0dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/creat_an_appointment"/>

                <ImageView
                    android:id="@+id/previousAppointment"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/previous_appointment"/>

                <ImageView
                    android:id="@+id/sendFeedback"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/send_feedback"/>

                <ImageView
                    android:id="@+id/shareApp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/share_app"/>

                <ImageView
                    android:id="@+id/signOut"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/sign_out"/>

                <ImageView
                    android:id="@+id/settingsIcon"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/more_tab"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>